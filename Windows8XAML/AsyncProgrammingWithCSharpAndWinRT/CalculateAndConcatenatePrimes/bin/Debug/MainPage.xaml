<Page
    x:Class="CalculateAndConcatenatePrimes.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CalculateAndConcatenatePrimes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" 
              Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="40"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Column="0" 
                       Grid.Row="0" 
                       Margin="10,0,0,0" 
                       FontSize="16" 
                       VerticalAlignment="Center">First Number</TextBlock>
            <TextBox Name="FirstNumber"
                     Grid.Column="1" 
                     Grid.Row="0"  
                     AcceptsReturn="true"/>
            <TextBlock Grid.Column="0" 
                       Grid.Row="2" 
                       Margin="10,0,0,0" 
                       FontSize="16" 
                       VerticalAlignment="Center">Last Number</TextBlock>
            <TextBox Name="LastNumber" 
                     Grid.Column="1" 
                     Grid.Row="2" 
                     AcceptsReturn="true"/>
            <TextBlock Grid.Column="0" 
                       Grid.Row="3" 
                       Margin="10,0,0,0" 
                       FontSize="16"
                       VerticalAlignment="Center">Number type</TextBlock>
            <ToggleSwitch Name="NumbersSwitch" 
                          Grid.Column="1"
                          Grid.Row="3" 
                          HorizontalAlignment="Right"
                          OffContent="Complex" 
                          OnContent="Prime"/>
            <Button x:ConnectionId='4' Name="CalculateBtn"
                    Grid.Row="4" 
                    Grid.Column="0" 
                    Grid.ColumnSpan="2"
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Center" 
                                                   >Calculate</Button>
            <TextBlock Name="Content" 
                       Grid.Column="0"
                       Grid.Row="5"
                       Grid.ColumnSpan="2"
                       Margin="10,4,0,6" 
                       TextWrapping="Wrap"/>
        </Grid>
        <Grid Grid.Row="0" 
              Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="40"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Column="0" 
                       Grid.Row="0" Margin="10,0,0,0" 
                       FontSize="16" 
                       VerticalAlignment="Center">First Number</TextBlock>
            <TextBox Name="FirstNumber1" 
                     Grid.Column="1" 
                     Grid.Row="0"  
                     AcceptsReturn="true"/>
            <TextBlock Grid.Column="0" 
                       Grid.Row="2" Margin="10,0,0,0" 
                       FontSize="16" 
                       VerticalAlignment="Center">Last Number</TextBlock>
            <TextBox Name="LastNumber1" 
                     Grid.Column="1" 
                     Grid.Row="2" 
                     AcceptsReturn="true"/>
            <TextBlock Grid.Column="0" 
                       Grid.Row="3" 
                       Margin="10,0,0,0" 
                       FontSize="16" 
                       VerticalAlignment="Center">Number type</TextBlock>
            <ToggleSwitch Name="NumbersSwitch1" 
                          Grid.Column="1" 
                          Grid.Row="3" 
                          HorizontalAlignment="Right" 
                          OffContent="Prime" 
                          OnContent="Complex"/>
            <Button x:ConnectionId='3' Name="CalculateBtn1" 
                    Grid.Row="4" 
                    Grid.Column="0" 
                    Grid.ColumnSpan="2" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Center" 
                                                    >Calculate</Button>
            <TextBlock Name="Content1" 
                       Grid.Column="0" 
                       Grid.Row="5" 
                       Grid.ColumnSpan="2" 
                       Margin="10,0,0,10" TextWrapping="Wrap"/>
        </Grid>
        <Grid Grid.Row="0" 
              Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="40"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Column="0"
                       Grid.Row="0" 
                       Margin="10,0,0,0" 
                       FontSize="16" 
                       VerticalAlignment="Center">First Number</TextBlock>
            <TextBox Name="FirstNumber2"
                     Grid.Column="1" 
                     Grid.Row="0"  
                     AcceptsReturn="true"/>
            <TextBlock Grid.Column="0" 
                       Grid.Row="2" 
                       Margin="10,0,0,0" 
                       FontSize="16" 
                       VerticalAlignment="Center">Last Number</TextBlock>
            <TextBox Name="LastNumber2" 
                     Grid.Column="1" 
                     Grid.Row="2" 
                     AcceptsReturn="true"/>
            <TextBlock Grid.Column="0" 
                       Grid.Row="3" 
                       Margin="10,0,0,0" 
                       FontSize="16" 
                       VerticalAlignment="Center">Number type</TextBlock>
            <ToggleSwitch Name="NumbersSwitch2" 
                          Grid.Column="1" 
                          Grid.Row="3" 
                          HorizontalAlignment="Right" 
                          OffContent="Complex"
                          OnContent="Prime"/>
            <Button x:ConnectionId='2' Name="CalculateBtn2" 
                    Grid.Row="4" 
                    Grid.Column="0" 
                    Grid.ColumnSpan="2" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Center" 
                                                    >Calculate</Button>
            <TextBlock Name="Content2" 
                       Grid.Column="0" 
                       Grid.Row="5"
                       Grid.ColumnSpan="2" 
                       Margin="10,0,0,10" 
                       TextWrapping="Wrap"/>
        </Grid>
        <Grid Grid.Row="0" 
              Grid.Column="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="40"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Column="0" 
                       Grid.Row="0" 
                       Margin="10,0,0,0" 
                       FontSize="16"
                       VerticalAlignment="Center">First Number</TextBlock>
            <TextBox Name="FirstNumber3"
                     Grid.Column="1" 
                     Grid.Row="0" 
                     FontSize="16"/>
            <TextBlock Grid.Column="0" 
                       Grid.Row="2" 
                       Margin="10,0,0,0" 
                       FontSize="16" 
                       VerticalAlignment="Center">Last Number</TextBlock>
            <TextBox Name="LastNumber3" 
                     Grid.Column="1" 
                     Grid.Row="2" 
                     FontSize="16"/>
            <TextBlock Grid.Column="0"
                       Grid.Row="3" 
                       Margin="10,0,0,0" 
                       FontSize="16" 
                       VerticalAlignment="Center">Number type</TextBlock>
            <ToggleSwitch Name="NumbersSwitch3"
                          Grid.Column="1" 
                          Grid.Row="3" 
                          HorizontalAlignment="Right" 
                          OffContent="Complex" 
                          OnContent="Prime"/>
            <Button x:ConnectionId='1' Name="CalculateBtn3" 
                    Grid.Row="4"
                    Grid.Column="0" 
                    Grid.ColumnSpan="2" 
                    HorizontalAlignment="Right"  
                    VerticalAlignment="Center" 
                                                    >Calculate</Button>
            <TextBlock Name="Content3" 
                       Grid.Column="0" 
                       Grid.Row="5"
                       Grid.ColumnSpan="2"
                       Foreground="LightGray"
                       Margin="10,0,0,10" 
                       TextWrapping="Wrap"/>
        </Grid>
    </Grid>
</Page>

