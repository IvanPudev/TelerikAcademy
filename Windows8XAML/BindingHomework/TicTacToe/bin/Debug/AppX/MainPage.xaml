<Page
    x:Class="TicTacToe.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TicTacToe"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ViewModels="using:TicTacToe.ViewModels"
    mc:Ignorable="d">

    <StackPanel Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel.DataContext>
            <ViewModels:GameViewModel/>
        </StackPanel.DataContext>
        <TextBlock FontSize="30" HorizontalAlignment="Center" Text="Tic-Tac-Toe Game" Padding="20"/>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
                <RowDefinition Height="200"/>
                <RowDefinition Height="200"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Row="0"
                    Grid.Column="0" 
                    BorderThickness="2"
                    BorderBrush="White" 
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                <Button BorderBrush="Transparent" FontSize="100"
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                        Command="{Binding Path=MoveMade}"
                        CommandParameter="00"
                           >
                    <TextBlock Text="{Binding TopLeft, Mode=TwoWay}"></TextBlock>
                </Button>
            </Border>
            <Border Grid.Row="0"
                    Grid.Column="1" 
                    BorderThickness="2"
                    BorderBrush="White" 
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                <Button BorderBrush="Transparent" FontSize="100"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                         Command="{Binding Path=MoveMade}"
                        CommandParameter="01">
                    <TextBlock Text="{Binding TopMiddle, Mode=TwoWay}"></TextBlock>
                </Button>
            </Border>
            <Border Grid.Row="0"
                    Grid.Column="2" 
                    BorderThickness="2"
                    BorderBrush="White" 
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                <Button BorderBrush="Transparent" FontSize="100"
                             HorizontalAlignment="Center" 
                    VerticalAlignment="Center" Command="{Binding Path=MoveMade}"
                        CommandParameter="02">
                    <TextBlock Text="{Binding TopRight, Mode=TwoWay}"></TextBlock>
                </Button>
            </Border>
            <Border Grid.Row="1"
                    Grid.Column="0" 
                    BorderThickness="2"
                    BorderBrush="White" 
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                <Button BorderBrush="Transparent" FontSize="100"
                             HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                            Command="{Binding Path=MoveMade}"
                        CommandParameter="10">
                    <TextBlock Text="{Binding MiddleLeft, Mode=TwoWay}"></TextBlock></Button>
            </Border>
            <Border Grid.Row="1"
                    Grid.Column="1" 
                    BorderThickness="2"
                    BorderBrush="White" 
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                <Button BorderBrush="Transparent" FontSize="100"
                             HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                            Command="{Binding Path=MoveMade}"
                        CommandParameter="11">
                    <TextBlock Text="{Binding MiddleCenter, Mode=TwoWay}"></TextBlock></Button>
            </Border>
            <Border Grid.Row="1"
                    Grid.Column="2" 
                    BorderThickness="2"
                    BorderBrush="White" 
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                <Button BorderBrush="Transparent" FontSize="100"
                             HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                         Command="{Binding Path=MoveMade}"
                        CommandParameter="12">
                    <TextBlock Text="{Binding MiddleRight, Mode=TwoWay}"></TextBlock></Button>
            </Border>
            <Border Grid.Row="2"
                    Grid.Column="0" 
                    BorderThickness="2"
                    BorderBrush="White" 
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                <Button BorderBrush="Transparent" FontSize="100"
                             HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                        Command="{Binding Path=MoveMade}"
                        CommandParameter="20">
                    <TextBlock Text="{Binding BottomLeft, Mode=TwoWay}"></TextBlock></Button>
            </Border>
            <Border Grid.Row="2"
                    Grid.Column="1" 
                    BorderThickness="2"
                    BorderBrush="White" 
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                <Button BorderBrush="Transparent" FontSize="100"
                             HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                           Command="{Binding Path=MoveMade}"
                        CommandParameter="21">
                    <TextBlock Text="{Binding BottomMiddle, Mode=TwoWay}"></TextBlock></Button>
            </Border>
            <Border Grid.Row="2"
                    Grid.Column="2" 
                    BorderThickness="2"
                    BorderBrush="White" 
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                <Button BorderBrush="Transparent" FontSize="100"
                             HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                            Command="{Binding Path=MoveMade}"
                        CommandParameter="22">
                    <TextBlock Text="{Binding BottomRight, Mode=TwoWay}"></TextBlock></Button>
            </Border>
        </Grid>
        <TextBlock FontSize="20" Text="{Binding Message}"></TextBlock>
    </StackPanel>
</Page>

